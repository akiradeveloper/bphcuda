require "rake/clean"

["make_compile_task", "compile_option"].each do |f|
  require "thrusting/build/#{f}"
end

["make_run_task"].each do |f|
  require "thrusting/performance/#{f}"
end

["def_compile"].each do |f|
  require "bphcuda/build/#{f}"
end

cc = BPHCUDA_CXX
cc = with_mode(cc, "release")

["wallshock"].each do |dir|
  make_compile_task(cc, dir)
  make_run_task_0(dir)
end

